<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

	<TextView
        android:id="@+id/summary_weeks_interval"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/vivid_blue"
		android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="week 08 - 12 Feb 2018"
        />


	<android.support.constraint.Guideline
		android:id="@+id/summary_guideline_middle"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintGuide_percent="0.5" />

	<pl.jurassic.roger.feature.summary.ui.view.SummaryChartView
		android:id="@+id/summary_chart"
		android:layout_width="@dimen/match_constraint"
		android:layout_height="@dimen/match_constraint"
		app:layout_constraintBottom_toTopOf="@id/summary_guideline_middle"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/summary_weeks_interval"
		app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>